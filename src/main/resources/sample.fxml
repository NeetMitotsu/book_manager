<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="pane" maxHeight="768.0" prefHeight="768.0" prefWidth="1366.0"
            xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yuudati.bookmanager.controller.MainTableController">
    <children>
        <Button fx:id="fromPathButton" layoutX="30.0" layoutY="40.0" mnemonicParsing="false" onAction="#switchFromPath"
                prefHeight="40.0" prefWidth="180.0" text="源地址"/>
        <Button fx:id="toPathButton" layoutX="30.0" layoutY="89.0" mnemonicParsing="false" onAction="#switchToPath"
                prefHeight="40.0" prefWidth="180.0" text="目标地址"/>
        <TextField fx:id="fromPathTextField" editable="false" layoutX="210.0" layoutY="40.0" prefHeight="40.0"
                   prefWidth="600.0" text="原路径"/>
        <TextField fx:id="toPathTextField" editable="false" layoutX="210.0" layoutY="89.0" prefHeight="40.0"
                   prefWidth="600.0" text="目标路径"/>
        <Button fx:id="moveButton" layoutX="841.0" layoutY="89.0" mnemonicParsing="false" onAction="#onlyMove"
                prefHeight="40.0" prefWidth="115.0" text="只移动"/>
        <Button fx:id="renameButton" layoutX="977.0" layoutY="89.0" mnemonicParsing="false" onAction="#onlyRename"
                prefHeight="40.0" prefWidth="115.0" text="只重命名"/>
        <Button fx:id="moveAndRenameButton" layoutX="1110.0" layoutY="89.0" mnemonicParsing="false"
                onAction="#moveAndRename" prefHeight="40.0" prefWidth="115.0" text="移动并重命名"/>
            <TableView fx:id="mainTableView" layoutY="160.0" prefHeight="600.0" prefWidth="1366.0" tableMenuButtonVisible="true">
                <columns>
                    <TableColumn fx:id="rowNumCol" minWidth="36.0" prefWidth="36.0" resizable="false" text="行号"/>
                    <TableColumn fx:id="fromPathCol" minWidth="133.0" prefWidth="133.0" text="原文件路径"/>
                    <TableColumn fx:id="fromNameCol" minWidth="133.0" prefWidth="133.0" text="原文件名"/>
                    <TableColumn fx:id="toPathCol" minWidth="133.0" prefWidth="133.0" text="目标文件路径"/>
                    <TableColumn fx:id="toNameCol" minWidth="133.0" prefWidth="133.0" text="目标文件名"/>
                    <TableColumn fx:id="exhibitionCol" minWidth="133.0" prefWidth="133.0" text="来源"/>
                    <TableColumn fx:id="authorCol" minWidth="133.0" prefWidth="133.0" text="作者"/>
                    <TableColumn fx:id="bookNameCol" minWidth="133.0" prefWidth="133.0" text="本名"/>
                    <TableColumn fx:id="themeCol" minWidth="133.0" prefWidth="133.0" text="题材"/>
                    <TableColumn fx:id="translateCol" minWidth="133.0" prefWidth="133.0" text="汉化组"/>
                    <TableColumn fx:id="actionCol" minWidth="133.0" prefWidth="133.0" text="操作">
                    </TableColumn>
                </columns>
            </TableView>
        <!--</ScrollPane>-->
    </children>
</AnchorPane>
